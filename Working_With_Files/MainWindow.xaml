<Window x:Class="Working_With_Files.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Working_With_Files"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Icon="/cli-tools.jpg">
    <Grid Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
        <TextBox x:Name="logTextBox" VerticalScrollBarVisibility="Auto" IsReadOnly="True" BorderBrush="Black" Background="#FFE6F9F9" Margin="0,0,0,68" />
        <Button Content="Serverni ishga tushir" Click="OnLogMessageClicked" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="227,381,0,0" Width="173" Height="30" Background="#FF2BFF00" BorderThickness="2,2,2,2"/>
        <Button Content="Clientni ishga tushir" HorizontalAlignment="Left" Height="30" Margin="405,381,0,0" VerticalAlignment="Top" Width="173" Click="Button_Click" Background="#FF02F5EF" BorderThickness="2,2,2,2"/>
    </Grid>
</Window>

